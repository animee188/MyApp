<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/start_bg_1"
    tools:context="com.joke.qianfeng.joke1526.UserActivity"

    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp">
 <LinearLayout
     android:id="@+id/title"
     android:orientation="horizontal"
     android:layout_width="match_parent"

     android:layout_height="wrap_content">
     <ImageView

         android:layout_width="30dp"
         android:onClick="userBack"
         android:layout_height="30dp"
         android:src="@mipmap/back"/>

     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:textColor="#ffffff"
         android:gravity="center"
         android:text="用户登录:"
         android:textSize="25sp"/>

 </LinearLayout>
    <LinearLayout
        android:id="@+id/yonghu"
        android:layout_marginTop="50dp"
        android:layout_below="@id/title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:text="用户名:"/>
        <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/mima"
        android:layout_below="@id/yonghu"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密    码:"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

        <EditText
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <Button
        android:id="@+id/denglu"
        android:layout_below="@id/mima"
        android:layout_width="match_parent"
        android:text="登录"
        android:textColor="#fff"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:background="#399B20"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/wenzi"
        android:layout_below="@id/denglu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="第三方登录:"/>
    <LinearLayout
        android:id="@+id/kuaisuweixin"
        android:layout_below="@id/wenzi"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="#26ADE4"
        android:onClick="loginQQ"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/myweixin"
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:src="@mipmap/feedback_qq"

           />
        <TextView
            android:id="@+id/loginQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"

            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:text="qq登录"/>


    </LinearLayout>
    <LinearLayout
        android:id="@+id/kuaisuqq"
        android:layout_below="@id/kuaisuweixin"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"

        android:background="#21C063"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/myqq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/feedback_weixin"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textColor="#fff"
            android:text="微信登录"/>


    </LinearLayout>




</RelativeLayout>
