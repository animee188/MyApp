<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="《皱纹》 当我老了"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_below="@id/title"
        android:text="作者：Liugayi"
        android:textSize="10dp"
        android:textColor="#ccc"/>
    <TextView
        android:id="@+id/read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="阅读量：5646"
        android:layout_alignTop="@id/author"
        android:layout_toRightOf="@id/author"
        android:textColor="#ccc"
        android:textSize="10dp"/>
    <TextView
        android:padding="5dp"
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="最感人的故事"
        android:layout_below="@id/author"
        android:layout_marginTop="10dp"
        android:background="#f5f5f5"
        />
    <TextView
        android:id="@+id/more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="剧情简介"
        android:textSize="15dp"
        android:layout_below="@id/text1"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/more"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故事以这两位。。。"
        android:layout_below="@id/image1"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/realtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当我老了"
        android:textSize="15dp"
        android:layout_below="@id/text2"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_below="@id/realtitle"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text3故事以这两位。。。"
        android:layout_below="@id/image2"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text4故事以这两位。。。"
        android:layout_below="@id/text3"
        />
    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="text5故事以这两位。。。"
        android:layout_below="@id/text4"
        />
    <ImageView
        android:id="@+id/image3"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/text5"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        />
    <ImageView
        android:id="@+id/image4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@id/image3"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/author_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liugayi"
        android:layout_marginTop="10dp"
        android:layout_below="@id/image4"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/authorbrief"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liugayi"
        android:layout_marginTop="5dp"
        android:layout_below="@id/author_bottom"
        android:textSize="10dp"/>
    </RelativeLayout>
</RelativeLayout>