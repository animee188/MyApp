<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
            android:scrollbars="none"
            android:id="@+id/fragment_picture_item_relative"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/fragment_picture_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:scaleType="fitXY"
            android:src="@mipmap/pic_loading1514"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_picture_item_image"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            >
            <TextView
                android:id="@+id/fragment_picture_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="title"/>
            <TextView
                android:id="@+id/fragment_picture_item_authorbrief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="画家"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@mipmap/line"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                />
            <TextView
                android:id="@+id/fragment_picture_item_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#eeeeee"
                android:textStyle="bold"
                android:text="summary"/>
            <TextView
                android:id="@+id/fragment_picture_item_summary2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="#eeeeee"
                android:gravity="right"
                android:textStyle="bold"
                android:text="summary2"/>

        </LinearLayout>

    </RelativeLayout>




</ScrollView>
