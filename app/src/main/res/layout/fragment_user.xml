<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
      android:orientation="vertical"
    android:weightSum="3"
     android:layout_height="match_parent" tools:context="fragments.UserFragment">
<RelativeLayout
    android:id="@+id/top_user"
    android:layout_width="match_parent"
    android:layout_height="200dp"

    android:gravity="center"
    android:background="#EC504D">
    <ImageView
        android:id="@+id/whiteLine"
        android:layout_width="80dp"
        android:layout_height="80dp"

        android:src="@mipmap/avator_whiteline"
        android:layout_centerInParent="true"

        />
    <ImageView
        android:id="@+id/login"
        android:background="@mipmap/avator_login"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/user_font"
        android:layout_width="wrap_content"
        android:layout_below="@id/login"
        android:text="点击使用QQ登录"
        android:paddingTop="20dp"
        android:textColor="#fff"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:layout_weight="2">
        <ListView
            android:id="@+id/lv_user"
            android:layout_below="@id/top_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>


</LinearLayout>
