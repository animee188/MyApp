<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.joke.qianfeng.joke1526.WelcomeActivity"
   >

    <RadioGroup
        android:id="@+id/main_rg"
        android:background="@mipmap/navigationbar_bg"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/get_movices"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:checked="true"
            android:layout_marginLeft="50dp"
            android:background="@drawable/movices_main"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="wrap_content"
            android:button="@null"

            android:id="@+id/get_texts"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/picturess_main"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/get_pictures"
            android:layout_width="wrap_content"
            android:button="@null"
            android:layout_marginLeft="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/text_main"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:button="@null"
            android:id="@+id/get_users"
            android:layout_marginLeft="50dp"
            android:background="@drawable/user_main"
            android:layout_height="wrap_content" />
    </RadioGroup>


    <RelativeLayout
        android:id="@+id/container"
        android:layout_above="@id/main_rg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>



</RelativeLayout>
